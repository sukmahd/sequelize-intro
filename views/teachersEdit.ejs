<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <h2>Edit Teacher Data</h2>
    <form action="/teachers/edit/<%= data.id%>" method="post">
      <input type="text" name='first_name' value="<%= data.first_name%>">
      <input type="text" name='last_name' value="<%= data.last_name%>">
      <input type="text" name='email' value="<%= data.email%>">
      <select name="SubjectId">
        <%if(data.Subject !== null){%>
            <option  value="<%= data.SubjectId%>" selected><%= data.Subject.subject_name%></option>
        <%}%>
        <% data_subject.forEach( cont => {%>
          <option value="<%= cont.id%>"><%= cont.subject_name%></option>
        <%})%>
      </select>
      <button class='button_3' type="submit">Submit</button>
    </form>
  </body>
</html>
