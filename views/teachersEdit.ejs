<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%-include layouts/header %>
  </head>
  <body>
    <div class="col-md-6 col-md-offset-3">
      <h2 class="text-center">Edit Teacher Data</h2>
      <form class="form-horizontal" action="/teachers/edit/<%= data.id%>" method="post">
        <div class="form-group">
          <label class="col-sm-2 control-label">First Name</label>
          <div class="col-sm-10">
              <input type="text" class="form-control" name='first_name' value="<%= data.first_name%>">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Last Name</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name='last_name' value="<%= data.last_name%>">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Email</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" name='email' value="<%= data.email%>">
            <input type="hidden" name='emailOri' value="<%= data.email%>">
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-2 control-label">Subject</label>
          <div class="col-sm-10">
            <select name="SubjectId">
              <% data_subject.forEach( cont => {%>
              <%  var selected%>
                <%if(cont.id == data.SubjectId){%>
                  <%selected = 'selected'%>
                <%}%>
                <option value="<%= cont.id%>" <%=selected%>><%= cont.subject_name%></option>
              <%})%>
            </select>
          </div>
        </div>
        <button type="submit">Submit</button>
      </form>
    </div>
  </body>
</html>
