<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%-include layouts/header %>
  </head>
  <body>
    <div class="col-md-6 col-md-offset-3">
      <h2 class="text-center">Add Subject to Students</h2>
      <form class="form-horizontal" action="/students/addSubject/<%= data.id%>" method="post">
        <div class="form-group">
          <label class="col-sm-4 control-label">First Name</label>
          <div class="col-sm-8">
            <p class="form-control-static"><%=data.first_name%></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4 control-label">Last Name</label>
          <div class="col-sm-8">
            <p class="form-control-static"><%=data.last_name%></p>
          </div>
        </div>
        <div class="form-group">
          <label class="col-sm-4 control-label">Email</label>
          <div class="col-sm-8">
            <p class="form-control-static"><%=data.email%></p>
          </div>
        </div>
        <div class="form-group">
          <label for="score" class="col-sm-4 control-label">Choose Subject</label>
          <div class="col-sm-8">
            <select class="form-control" name="SubjectId">
              <% data2.forEach( row => {%>
                <option value="<%= row.id%>"><%= row.subject_name%></option>
              <%})%>
            </select><br>

            <button class="btn btn-default text-center" type="submit">Submit</button>
          </div>
        </div>

      </form>
    </div>
  </body>

</html>
