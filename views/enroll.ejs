
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <%-include layouts/header %>
  </head>
  <body>
    <div class="col-md-6 col-md-offset-3">
      <h2 class="text-center"><%= data[0].Subject.subject_name%></h2>
        <a href="/subjects"><button>Subject List</button></a>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Score</th>
            <th>Letter Score</th>
          </tr>
        </thead>
        <tbody>
          <% let i = 0%>
          <%data.forEach(dat =>{%>
            <tr>
              <td><%= dat.Student.first_name + ' ' + dat.Student.last_name%></td>
              <%if(dat.score == null){%>
                <td><a href="/subjects/givescore/<%=dat.StudentId%>/<%=dat.SubjectId%>">Give Score</a></td>
              <%}else{%>
                <td><%=dat.score%></td>
              <%}%>
              <td><%= scoreLetter[i]%></td>
              <% i++%>
            </tr>
          <%})%>
        </tbody>
      </table>
    </div>
  </body>


<script>
function goBack() {
   window.history.back();
}
</script>


</html>
